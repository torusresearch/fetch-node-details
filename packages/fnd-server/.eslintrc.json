{
  "extends": ["@toruslabs/eslint-config-node"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 11,
    "project": "./tsconfig.json"
  },
  "env": {
    "es6": true,
    "es2020": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "camelcase": 0,
    "n/no-unpublished-import": "off",
    "mocha/no-setup-in-describe": "off"
  },
  "globals": {
    "it": "readonly",
    "beforeEach": "readonly",
    "afterEach": "readonly",
    "describe": "readonly",
    "expect": "readonly"
  }
}
